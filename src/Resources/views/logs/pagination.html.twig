{% if pagination.maxPage > 1 %}
    {% set nearbyPagesLimit = 4 %}

    <div class="sw-data-grid__pagination">
        <div class="sw-pagination">
            {% if pagination.page != 1 %}
                <a href="{{ pageUrl }}/{{ shopId }}/{{ language }}/1/{{ order }}" class="sw-pagination__page-button sw-pagination__page-button-prev">
                <span class="sw-icon icon--small-arrow-medium-left sw-icon--fill sw-icon--small">
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="16" height="16" viewBox="0 0 16 16"><defs><path id="icons-small-arrow-medium-left-a" d="M4.70710678,5.29289322 C4.31658249,4.90236893 3.68341751,4.90236893 3.29289322,5.29289322 C2.90236893,5.68341751 2.90236893,6.31658249 3.29289322,6.70710678 L7.29289322,10.7071068 C7.68341751,11.0976311 8.31658249,11.0976311 8.70710678,10.7071068 L12.7071068,6.70710678 C13.0976311,6.31658249 13.0976311,5.68341751 12.7071068,5.29289322 C12.3165825,4.90236893 11.6834175,4.90236893 11.2928932,5.29289322 L8,8.58578644 L4.70710678,5.29289322 Z"></path></defs><use fill="#758CA3" fill-rule="evenodd" transform="matrix(0 -1 -1 0 16 16)" xlink:href="#icons-small-arrow-medium-left-a"></use></svg>
                </span>
                </a>
            {% endif %}
            <ul class="sw-pagination__list">
                {% for i in 1..pagination.maxPage %}
                    {% if 0 == (pagination.page - nearbyPagesLimit) - loop.index %} {# dot before #}
                        <li class="sw-pagination__list-item">
                            <span class="sw-pagination__list-separator">...</span>
                        </li>
                    {% elseif 0 == (pagination.page + nearbyPagesLimit) - loop.index %} {# dot after #}
                        <li class="sw-pagination__list-item">
                            <span class="sw-pagination__list-separator">...</span>
                        </li>
                    {% elseif 0 < (pagination.page - nearbyPagesLimit) - loop.index %} {# hide all before #}
                    {% elseif 0 > (pagination.page + nearbyPagesLimit) - loop.index %} {# hide all after #}
                    {% else %}
                        <li class="sw-pagination__list-item" >
                            <a href="{{ pageUrl }}/{{ shopId }}/{{ language }}/{{ loop.index }}/{{ order }}" class="sw-pagination__list-button {% if i == pagination.page %}is-active{% endif %}" style="text-decoration: none; {% if i == pagination.page %}pointer-events: none; {% endif %}">
                                {{ loop.index }}
                            </a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
            {% if pagination.page != pagination.maxPage %}
                <a href="{{ pageUrl }}/{{ shopId }}/{{ language }}/{{ pagination.maxPage }}/{{ order }}" class="sw-pagination__page-button sw-pagination__page-button-next">
                <span class="sw-icon icon--small-arrow-medium-right sw-icon--fill sw-icon--small">
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="16" height="16" viewBox="0 0 16 16"><defs><path id="icons-small-arrow-medium-right-a" d="M4.70710678,5.29289322 C4.31658249,4.90236893 3.68341751,4.90236893 3.29289322,5.29289322 C2.90236893,5.68341751 2.90236893,6.31658249 3.29289322,6.70710678 L7.29289322,10.7071068 C7.68341751,11.0976311 8.31658249,11.0976311 8.70710678,10.7071068 L12.7071068,6.70710678 C13.0976311,6.31658249 13.0976311,5.68341751 12.7071068,5.29289322 C12.3165825,4.90236893 11.6834175,4.90236893 11.2928932,5.29289322 L8,8.58578644 L4.70710678,5.29289322 Z"></path></defs><use fill="#758CA3" fill-rule="evenodd" transform="rotate(-90 8 8)" xlink:href="#icons-small-arrow-medium-right-a"></use></svg>
                </span>
                </a>
            {% endif %}
        </div>
    </div>
{% endif %}